@model BeeColonyViewModel

@{
    ViewBag.Title = "Детайли за кошера";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.PlateNumber</h3>
            <p class="mb-0"><span class="fw-bold">Магазини: </span>@Model.Super</p>
            <p class="mb-0"><span class="fw-bold">Брой магазини: </span>@Model.NumberOfSupers</p>
            <p class="mb-0"><span class="fw-bold">Втори плодник: </span>@Model.SecondBroodBox</p>
            <p class="mb-0"><span class="fw-bold">Допълнителни корпуси: </span>@Model.NumberOfAdditionalBoxes</p>
            <p class="mb-0"><span class="fw-bold">Система на отглеждане: </span>@Model.TypeOfBroodBox</p>
            <p class="mb-0"><span class="fw-bold">Допълнителна информация: </span>@Model.AdditionalComмent</p>
            <p class="mb-0"><span class="fw-bold">Оплодена майка: </span>@Model.MatedBeeQueen</p>
            <p class="mb-0"><span class="fw-bold">Майкопроизводител: </span>@Model.BeeQueen.Breeder</p>
            <p class="mb-0"><span class="fw-bold">Порода на майката: </span>@Model.BeeQueen.BeeQueenType</p>
            <p class="mb-0"><span class="fw-bold">Година на майката: </span>@Model.BeeQueen.BeeQueenYearOfBirth</p>
        </div>
        <a asp-controller="BeeColony" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Редакция</a>
        <a asp-controller="BeeColony" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Изтриване</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
