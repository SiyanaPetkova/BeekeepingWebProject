@model ApiaryEditFormModel

@{
    ViewBag.Title = "Редактиране на данните за пчелина";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Задайте име, за да търсите своя пчелин по-лесно">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" placeholder="Къде се намира Вашия пчелин">
                <span asp-validation-for="Location" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationNumber"></label>
                <input asp-for="RegistrationNumber" class="form-control"></input>
                <span asp-validation-for="RegistrationNumber" class="small text-danger"></span>
            </div>
            <div id="map" style="width: 100%; height: 100vh"></div>
            <div class="row">
                <div class="col-3">
                    <label asp-for="Latitude"></label>
                    <input asp-for="Latitude" class="form-control" id="latitude">
                    <span asp-validation-for="Latitude" class="small text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="Longitude"></label>
                    <input asp-for="Longitude" class="form-control" id="longitude">
                    <span asp-validation-for="Longitude" class="small text-danger"></span>
                </div>
            </div>
            <input class="btn btn-warning mt-3" type="submit" value="Запази" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let mapOptions = {
            center: [42.69589761051528, 25.307006835937504],
            zoom: 10
        }

        let map = new L.map('map', mapOptions);

        let layer = new L.TileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png');
        map.addLayer(layer);


        let marker = null;
        map.on('click', (event) => {

            if (marker !== null) {
                map.removeLayer(marker);
            }

            marker = L.marker([event.latlng.lat, event.latlng.lng]).addTo(map);

            document.getElementById('latitude').value = event.latlng.lat;
            document.getElementById('longitude').value = event.latlng.lng;
        })
    </script>
    }