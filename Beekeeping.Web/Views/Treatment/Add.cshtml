@model HiveTreatmentFormModel

<body>
    <div class="container text-center">

        <h2>Добави третиране</h2>
        <form method="post">
            <div class="row">
                <div class="col-3">
                    <label asp-for="TreatmentDate"></label>
                    <input asp-for="TreatmentDate" class="form-control">
                    <span asp-validation-for="TreatmentDate" class="small text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="MedicationName"></label>
                    <input asp-for="MedicationName" class="form-control">
                    <span asp-validation-for="MedicationName" class="small text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="ActiveIngredient"></label>
                    <input asp-for="ActiveIngredient" class="form-control">
                    <span asp-validation-for="ActiveIngredient" class="small text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="PriceOfTheTreatment"></label>
                    <input asp-for="PriceOfTheTreatment" class="form-control">
                    <span asp-validation-for="PriceOfTheTreatment" class="small text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="NumberOfTreatedColonies"></label>
                    <input asp-for="NumberOfTreatedColonies" class="form-control">
                    <span asp-validation-for="NumberOfTreatedColonies" class="small text-danger"></span>
                </div>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Запази" />
        </form>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

