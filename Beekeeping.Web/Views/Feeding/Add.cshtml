@model HiveFeedingFormModel

<body>
    <div class="container text-center">

        <h2>Добави хранене</h2>

        <form class="row row-cols-md-auto g-3 align-items-end">
            <div class="col-md-3">
                <label asp-for="DayOfFeeding"></label>
                <input asp-for="DayOfFeeding" class="form-control">
                <span asp-validation-for="DayOfFeeding" class="small text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="FeedingType"></label>
                <input asp-for="FeedingType" class="form-control">
                <span asp-validation-for="FeedingType" class="small text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="PriceOfFeeding"></label>
                <input asp-for="PriceOfFeeding" class="form-control">
                <span asp-validation-for="PriceOfFeeding" class="small text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="NumberOfBeeHives"></label>
                <input asp-for="NumberOfBeeHives" class="form-control">
                <span asp-validation-for="NumberOfBeeHives" class="small text-danger"></span>
            </div>
        </form>
        <input class="btn btn-primary mt-3" type="submit" value="Запази" />
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

