@model IEnumerable<UserAdminModel>

@{
    int count = 0;
}

@{
    ViewBag.Title = "Администратори";
}

<h2 class="text-center">@ViewBag.Title</h2>

<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#addAdminModal">Добави администратор</button>

<div class="text-center row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        @foreach (var i in Model)
        {
            {
                count = count + 1;
            }

            <tbody>
                <tr>
                    <th scope="row">@count</th>
                    <td>@i.Email</td>
                    <td>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-warning"
                           onclick="return confirm('Сигурни ли сте,че искате да премахнете администраторските права на този потребител?')">
                            <span class="glyphicon">&#128465;</span>
                        </a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>

<div class="modal fade" id="addAdminModal" tabindex="-1" aria-labelledby="addAdminModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAdminModalLabel">Добави администратор</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddAdmin" method="post">
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="Email" name="Email" required>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-warning">Добави</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Затвори</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>